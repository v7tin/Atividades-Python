#operadores Aritméticos:
x = 3
print(x + 1) #adição
print(x - 1) #subtração
print(x * 2) #multiplicação
print(x / 2) #divisão
print(x // 2) #divisão inteira
print(x ** 2) #exponenciação
print(x % 2) #resto da divisão / módulo
